<Window x:Class="TSD_BookCollection.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Book Collection" Height="450" Width="800">

<Window.Resources>
    <DataTemplate x:Key="BookTemplate">
        <Border BorderBrush="Gray" BorderThickness="0,0,0,1"> <!-- pozioma linia -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="Auto" /> <!-- separator -->
                    <ColumnDefinition Width="4*" />
                    <ColumnDefinition Width="Auto" /> <!-- separator -->
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>

                <!-- ID -->
                <TextBlock Grid.Column="0" Text="{Binding Id}" Padding="5" />

                <!-- Pionowa linia -->
                <Border Grid.Column="1" BorderBrush="Gray" BorderThickness="1,0,0,0" />

                <!-- Title -->
                <TextBlock Grid.Column="2" Text="{Binding Title}" Padding="5" />

                <!-- Pionowa linia -->
                <Border Grid.Column="3" BorderBrush="Gray" BorderThickness="1,0,0,0" />

                <!-- IsRead -->
                <TextBlock Grid.Column="4" Text="{Binding IsRead}" Padding="5" HorizontalAlignment="Center" />
            </Grid>
        </Border>
    </DataTemplate>
</Window.Resources>





    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="5*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Header" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" />

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

<StackPanel Margin="10" Grid.Column="0">
    <TextBlock Text="My Books:" FontSize="16" FontWeight="Bold" Margin="0,0,0,30" />

    <Border BorderBrush="Gray" BorderThickness="1">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="4*" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Column="0" Text="ID" FontWeight="Bold" Padding="5" />
        <Border Grid.Column="1" BorderBrush="Gray" BorderThickness="1,0,0,0" />
        
        <TextBlock Grid.Column="2" Text="Title" FontWeight="Bold" Padding="5" />
        <Border Grid.Column="3" BorderBrush="Gray" BorderThickness="1,0,0,0" />
        
        <TextBlock Grid.Column="4" Text="IsRead" FontWeight="Bold" Padding="5" HorizontalAlignment="Center"/>
    </Grid>
</Border>


    <ListBox ItemsSource="{Binding Books}"
         ItemTemplate="{StaticResource BookTemplate}"
         BorderBrush="Gray"
         BorderThickness="1"
         HorizontalContentAlignment="Stretch" />
</StackPanel>




            <TextBlock Grid.Column="1"
                       Text="Right Pane"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="16"
                       FontStyle="Italic" />
        </Grid>

        <TextBlock Grid.Row="2" Text="Footer" HorizontalAlignment="Center" VerticalAlignment="Center" FontStyle="Italic" />
    </Grid>
</Window>
