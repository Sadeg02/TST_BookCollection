<Window x:Class="TSD_BookCollection.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:TSD_BookCollection"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        Title="Book Collection"
        Height="700"
        Width="900">
    <Window.Resources>
        <DataTemplate x:Key="BookTemplate">
            <Border BorderBrush="Gray"
                    BorderThickness="0,0,0,1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="Auto" />
                        <!-- separator -->
                        <ColumnDefinition Width="4*" />
                        <ColumnDefinition Width="Auto" />
                        <!-- separator -->
                        <ColumnDefinition Width="1*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0"
                               Text="{Binding Id}"
                               Padding="5" />
                    <Border Grid.Column="1"
                            BorderBrush="Gray"
                            BorderThickness="1,0,0,0" />
                    <TextBlock Grid.Column="2"
                               Text="{Binding Title}"
                               Padding="5"
                               TextWrapping="Wrap" />
                    <Border Grid.Column="3"
                            BorderBrush="Gray"
                            BorderThickness="1,0,0,0" />
                    <TextBlock Grid.Column="4"
                               Text="{Binding IsRead}"
                               Padding="5"
                               HorizontalAlignment="Center" />
                </Grid>
            </Border>
        </DataTemplate>
        <ObjectDataProvider x:Key="bookFormat"
                            MethodName="GetValues"
                            ObjectType="{x:Type sys:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="local:BookFormat" />
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0"
              Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <!-- Dla logo -->
                <ColumnDefinition Width="*" />
                <!-- Dla nagłówka -->
            </Grid.ColumnDefinitions>
            <!-- Logo po lewej -->
            <Image Grid.Column="0"
                   Source="/images/logo.png"
                   Width="100"
                   Height="100"
                   VerticalAlignment="Center"
                   Margin="0,0,10,0" />
            <!-- Nagłówek wyśrodkowany w dostępnej przestrzeni -->
            <TextBlock Grid.Column="1"
                       Text="Book Collection"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontWeight="Bold"
                       FontSize="20" />
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <StackPanel Margin="10"
                        Grid.Column="0">
                <TextBlock Text="My Books:"
                           FontSize="16"
                           FontWeight="Bold"
                           Margin="0,0,0,10" />
                <Button Content="Add Book"
                        Grid.Row="2"
                        Margin="10"
                        Click="AddBook_Click"
                        HorizontalAlignment="Left"
                        Padding="5,2" />
                <!-- Nagłówki kolumn -->
                <Border BorderBrush="Gray"
                        BorderThickness="1"
                        Margin="0,0,0,5">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="4*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="1*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0"
                                   Text="ID"
                                   FontWeight="Bold"
                                   Padding="5" />
                        <Border Grid.Column="1"
                                BorderBrush="Gray"
                                BorderThickness="1,0,0,0" />
                        <TextBlock Grid.Column="2"
                                   Text="Title"
                                   FontWeight="Bold"
                                   Padding="5" />
                        <Border Grid.Column="3"
                                BorderBrush="Gray"
                                BorderThickness="1,0,0,0" />
                        <TextBlock Grid.Column="4"
                                   Text="IsRead"
                                   FontWeight="Bold"
                                   Padding="5"
                                   HorizontalAlignment="Center" />
                    </Grid>
                </Border>
                <!-- Lista książek -->
                <ListBox ItemsSource="{Binding Books}"
                         SelectedItem="{Binding SelectedBook, Mode=TwoWay}"
                         ItemTemplate="{StaticResource BookTemplate}"
                         BorderBrush="Gray"
                         BorderThickness="1"
                         HorizontalContentAlignment="Stretch"
                         ScrollViewer.VerticalScrollBarVisibility="Auto"
                         MaxHeight="300" />
            </StackPanel>
            <Border Grid.Column="1"
                    BorderBrush="Gray"
                    BorderThickness="1"
                    Padding="10"
                    Margin="10">
                <StackPanel>
                    <TextBlock Text="Book Details"
                               FontWeight="Bold"
                               FontSize="16"
                               Margin="0,0,0,10" />
                    <TextBlock Text="ID:"
                               FontWeight="Bold" />
                    <TextBlock Text="{Binding SelectedBook.Id, RelativeSource={RelativeSource AncestorType=Window}}"
                               Margin="0,0,0,10" />
                    <TextBlock Text="Title:"
                               FontWeight="Bold" />
                    <TextBox Text="{Binding SelectedBook.Title, RelativeSource={RelativeSource AncestorType=Window}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             TextWrapping="Wrap"
                             Margin="0,0,0,10" />
                    <TextBlock Text="Author:"
                               FontWeight="Bold" />
                    <TextBox Text="{Binding SelectedBook.Author, RelativeSource={RelativeSource AncestorType=Window}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             Margin="0,0,0,10" />
                    <TextBlock Text="Year:"
                               FontWeight="Bold" />
                    <TextBox Text="{Binding SelectedBook.Year, RelativeSource={RelativeSource AncestorType=Window}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             Margin="0,0,0,10" />
                    <TextBlock Text="Format:"
                               FontWeight="Bold" />
                    <ComboBox ItemsSource="{Binding Source={StaticResource bookFormat}}"
                              SelectedItem="{Binding SelectedBook.Format, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                              Margin="0,0,0,10" />
                    <StackPanel Orientation="Horizontal"
                                VerticalAlignment="Center">
                        <CheckBox IsChecked="{Binding SelectedBook.IsRead, RelativeSource={RelativeSource AncestorType=Window}, Mode=TwoWay}"
                                  Content="Read" />
                    </StackPanel>
                    <Button Content="Delete Book"
                            Background="Tomato"
                            Foreground="White"
                            Click="RaiseDeleteBookRequested" />
                </StackPanel>
            </Border>
        </Grid>
        <StackPanel Grid.Row="2"
                    Orientation="Vertical"
                    HorizontalAlignment="Center"
                    Margin="10">
            <TextBlock Text="Adjust Background Darkness"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,5" />
            <Slider x:Name="DarknessSlider"
                    Minimum="0"
                    Maximum="255"
                    Value="255"
                    Width="200"
                    ValueChanged="DarknessSlider_ValueChanged" />
        </StackPanel>
    </Grid>
</Window>