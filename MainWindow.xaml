<Window x:Class="TSD_BookCollection.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Book Collection" Height="450" Width="800">

    <Window.Resources>
        <DataTemplate x:Key="BookTemplate">
            <StackPanel Margin="5">
                <TextBlock FontWeight="Bold" Text="{Binding Title}" />
                <TextBlock Text="{Binding Author}" />
                <TextBlock Text="{Binding Year}" />
                <TextBlock Text="{Binding Format}" />
                <CheckBox IsChecked="{Binding IsRead}" IsEnabled="False" Content="Read" />
            </StackPanel>
        </DataTemplate>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="5*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Header" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" />

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <ListBox Grid.Column="0"
                     ItemsSource="{Binding Books}"
                     ItemTemplate="{StaticResource BookTemplate}"
                     Margin="10" />

            <TextBlock Grid.Column="1"
                       Text="Right Pane"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="16"
                       FontStyle="Italic" />
        </Grid>

        <TextBlock Grid.Row="2" Text="Footer" HorizontalAlignment="Center" VerticalAlignment="Center" FontStyle="Italic" />
    </Grid>
</Window>
