<Window x:Class="TSD_BookCollection.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:TSD_BookCollection"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        Title="Book Collection" Height="450" Width="800">

    <Window.Resources>
        <DataTemplate x:Key="BookTemplate">
            <Border BorderBrush="Gray" BorderThickness="0,0,0,1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="Auto" /> <!-- separator -->
                        <ColumnDefinition Width="4*" />
                        <ColumnDefinition Width="Auto" /> <!-- separator -->
                        <ColumnDefinition Width="1*" />
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Text="{Binding Id}" Padding="5" />
                    <Border Grid.Column="1" BorderBrush="Gray" BorderThickness="1,0,0,0" />
                    <TextBlock Grid.Column="2" Text="{Binding Title}" Padding="5" TextWrapping="Wrap" />
                    <Border Grid.Column="3" BorderBrush="Gray" BorderThickness="1,0,0,0" />
                    <TextBlock Grid.Column="4" Text="{Binding IsRead}" Padding="5" HorizontalAlignment="Center" />
                </Grid>
            </Border>
        </DataTemplate>
        <ObjectDataProvider x:Key="bookFormat" MethodName="GetValues" ObjectType="{x:Type sys:Enum}">
        <ObjectDataProvider.MethodParameters>
            <x:Type TypeName="local:BookFormat"/>
        </ObjectDataProvider.MethodParameters>
    </ObjectDataProvider>
    <BooleanToVisibilityConverter x:Key="BoolToVis" />
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Header" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" Margin="10" />

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <StackPanel Margin="10" Grid.Column="0">
                <TextBlock Text="My Books:" FontSize="16" FontWeight="Bold" Margin="0,0,0,10" />
                <Button Content="Add Book" Grid.Row="2" Margin="10"
        Click="AddBook_Click"
        HorizontalAlignment="Left"
        Padding="5,2"/>

                <!-- Nagłówki kolumn -->
                <Border BorderBrush="Gray" BorderThickness="1" Margin="0,0,0,5">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="4*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="1*" />
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="ID" FontWeight="Bold" Padding="5" />
                        <Border Grid.Column="1" BorderBrush="Gray" BorderThickness="1,0,0,0" />
                        <TextBlock Grid.Column="2" Text="Title" FontWeight="Bold" Padding="5" />
                        <Border Grid.Column="3" BorderBrush="Gray" BorderThickness="1,0,0,0" />
                        <TextBlock Grid.Column="4" Text="IsRead" FontWeight="Bold" Padding="5" HorizontalAlignment="Center" />
                    </Grid>
                </Border>

                <!-- Lista książek -->
                <ListBox ItemsSource="{Binding Books}"
         SelectedItem="{Binding SelectedBook, Mode=TwoWay}"
         ItemTemplate="{StaticResource BookTemplate}"
         BorderBrush="Gray"
         BorderThickness="1"
         HorizontalContentAlignment="Stretch"
         ScrollViewer.VerticalScrollBarVisibility="Auto"
         MaxHeight="300" />


                         
            </StackPanel>

<Border Grid.Column="1" BorderBrush="Gray" BorderThickness="1" Padding="10" Margin="10">
    <StackPanel>
        <TextBlock Text="Book Details" FontWeight="Bold" FontSize="16" Margin="0,0,0,10" />

        <TextBlock Text="ID:" FontWeight="Bold" />
        <TextBlock Text="{Binding SelectedBook.Id, RelativeSource={RelativeSource AncestorType=Window}}" Margin="0,0,0,10" />

        <TextBlock Text="Title:" FontWeight="Bold" />
        <TextBox Text="{Binding SelectedBook.Title, RelativeSource={RelativeSource AncestorType=Window}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                 TextWrapping="Wrap" Margin="0,0,0,10" />

        <TextBlock Text="Author:" FontWeight="Bold" />
        <TextBox Text="{Binding SelectedBook.Author, RelativeSource={RelativeSource AncestorType=Window}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                 Margin="0,0,0,10" />

        <TextBlock Text="Year:" FontWeight="Bold" />
        <TextBox Text="{Binding SelectedBook.Year, RelativeSource={RelativeSource AncestorType=Window}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                 Margin="0,0,0,10" />
                 
        <TextBlock Text="Format:" FontWeight="Bold" />
        <ComboBox ItemsSource="{Binding Source={StaticResource bookFormat}}"
                SelectedItem="{Binding SelectedBook.Format, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                Margin="0,0,0,10" />



        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
            <CheckBox IsChecked="{Binding SelectedBook.IsRead, RelativeSource={RelativeSource AncestorType=Window}, Mode=TwoWay}" 
                      Content="Read" />
        </StackPanel>
          <Button Content="Delete Book" Click="DeleteBook_Click" Background="Tomato" Foreground="White"/>
    </StackPanel>
</Border>

        </Grid>

        <TextBlock Grid.Row="2" Text="Footer" HorizontalAlignment="Center" VerticalAlignment="Center" FontStyle="Italic" Margin="10" />
    </Grid>
</Window>
